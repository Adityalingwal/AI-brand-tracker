{
    "title": "AI Brand Tracker",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "category": {
            "title": "Industry Category",
            "type": "string",
            "description": "The industry or niche to analyze",
            "editor": "textfield",
            "prefill": "CRM software"
        },
        "myBrand": {
            "title": "My Brand",
            "type": "string",
            "description": "Your brand name to track",
            "editor": "textfield",
            "prefill": "Salesforce"
        },
        "competitors": {
            "title": "Competitors (Optional)",
            "type": "array",
            "description": "Competitor brands to compare (max 5)",
            "editor": "stringList",
            "prefill": [],
            "maxItems": 5
        },
        "platforms": {
            "title": "AI Platforms",
            "type": "array",
            "description": "Which AI platforms to query",
            "editor": "select",
            "items": {
                "type": "string",
                "enum": ["chatgpt", "gemini", "perplexity"],
                "enumTitles": ["ChatGPT", "Gemini", "Perplexity"]
            },
            "prefill": ["perplexity"],
            "minItems": 1
        },
        "prompts": {
            "title": "Prompts",
            "type": "array",
            "description": "Questions to ask AI platforms (1-3 prompts)",
            "editor": "stringList",
            "prefill": ["What are the best CRM softwares available?"],
            "minItems": 1,
            "maxItems": 3
        }
    },
    "required": ["category", "myBrand", "platforms", "prompts"]
}
