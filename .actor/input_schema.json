{
    "title": "AI Brand Tracker",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "category": {
            "title": "Industry Category",
            "type": "string",
            "description": "The industry or niche to analyze (e.g., 'CRM software', 'project management tools')",
            "editor": "textfield",
            "prefill": "CRM software"
        },
        "myBrand": {
            "title": "My Brand",
            "type": "string",
            "description": "Your brand name to track visibility for",
            "editor": "textfield",
            "prefill": "Salesforce"
        },
        "competitors": {
            "title": "Competitor Brands (Optional)",
            "type": "array",
            "description": "Competitor brands to compare against",
            "editor": "stringList",
            "prefill": [],
            "maxItems": 10
        },
        "platforms": {
            "title": "AI Platforms",
            "type": "array",
            "description": "Select which AI platforms to query",
            "editor": "select",
            "items": {
                "type": "string",
                "enum": ["chatgpt", "gemini", "perplexity"],
                "enumTitles": ["ChatGPT", "Gemini", "Perplexity"]
            },
            "prefill": ["chatgpt"],
            "minItems": 1
        },
        "promptCount": {
            "title": "Number of Prompts",
            "type": "integer",
            "description": "How many prompts to use (1-5)",
            "default": 1,
            "minimum": 1,
            "maximum": 5,
            "prefill": 1
        },
        "customPrompts": {
            "title": "Custom Prompts (Optional)",
            "type": "array",
            "description": "Your own prompts instead of templates",
            "editor": "stringList",
            "maxItems": 5
        }
    },
    "required": ["category", "myBrand", "platforms"]
}
